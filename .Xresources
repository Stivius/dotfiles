#define fg #d0d0d0
#define bg #181818
#define bg_trans #C0181818
#define trans #00000000
#define prm #6c6cbf
#define prm_light #4e4e6a
#define urg #ff5250

! ´bg´, ´fg´, ´bgalt´, ´hlbg´, ´hlfg´
rofi.color-normal: trans, fg, trans, prm_light, fg
! background´, ´border´, ´separator´
rofi.color-window: bg_trans, prm_light, prm_light
URxvt.perl-lib: /home/stivius/.config/urxvt
URxvt.perl-ext-common: default,vim-scrollback,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg3
URxvt.keysym.M-o: perl:matcher:list
URxvt.vim-scrollback: M-w
URxvt.vim-scrollback-paste: M-p
! index-2 to get the actual color index (0..15)
! 1 leads to transparent color (not planned but outcome is perfect :)
URxvt.vim-scrollback-bg: 1
URxvt.vim-scrollback-fg: 7
URxvt.depth:	32
URxvt.scrollBar: false
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true
URxvt.saveline: 2048
URxvt.modifier: alt
! URvt.skipBuiltinGlyphs: true
URxvt.font: xft:Source Code Pro:style=Regular:size=26,xft:PowerlineSymbols:style=Medium,xft:Iosevka Nerd Font Mono:style=Regular:size=20,xft:Noto Color Emoji:style=Regular
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.cursorBlink:	true
URxvt.cursorUnderline: false
URxvt.pointerBlank: true
URxvt.internalBorder: 6
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.background:   [75]#181818
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! custom
*.primary: prm
*.urgent: urg

! special
*.foreground:   #bcbcbc
*.background:   #181818
*.cursorColor:  #c5c8c6

