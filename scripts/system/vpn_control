#!/bin/bash

MODE="$1"

function show_status() {
  local result=`wg show wg0 | grep wg0`
  echo "result $result"
}

case "$MODE" in
  "on")
    wg-quick up wg0
    show_status
    dunstify VPN 'Enabled'
    ;;
  "off")
    wg-quick down wg0
    dunstify VPN 'Disabled'
    ;;
  *)
    dunstify VPN 'Unknown mode'
    ;;
esac
