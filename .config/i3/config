for_window [class="Zathura"] move to workspace $ws7, focus
for_window [title="^Zettelkasten$"] move to workspace $ws7, focus
for_window [title="Quick Connect"] move to workspace $ws8, focus
for_window [class="Teams"] move to workspace $ws9, focus

for_window [class="Spotify"] floating enable, resize set 1500 900, move position center
for_window [class="AnyConnect"] floating enable
for_window [class="Blueman-manager"] floating enable, move scratchpad
for_window [title="Remmina Remote"] floating enable, move scratchpad

bindsym $mod+plus scratchpad show
